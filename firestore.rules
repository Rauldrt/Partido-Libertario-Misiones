
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to form definitions
    match /form-definitions/{formId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can change the form structure
    }

    // Allow public write access for form submissions
    match /afiliaciones/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    match /fiscalizaciones/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    match /contactSubmissions/{docId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Default deny all other reads and writes for non-admins
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
