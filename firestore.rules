
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow admins (any authenticated user) to read/write anything
    match /{document=**} {
        allow read, write: if request.auth != null;
    }

    // Allow public read access to form definitions
    match /form-definitions/{formId} {
        allow read: if true;
    }

    // Allow anyone to create (submit) a form
    match /afiliaciones/{submissionId} {
      allow create: if request.resource.data.size() > 0;
    }

    // Allow anyone to create (submit) a form
    match /fiscalizaciones/{submissionId} {
      allow create: if request.resource.data.size() > 0;
    }

    // Allow anyone to create (submit) a form
    match /contactSubmissions/{submissionId} {
      allow create: if request.resource.data.size() > 0;
    }
  }
}
