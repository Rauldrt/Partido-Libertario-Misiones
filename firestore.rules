rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow admin read/write to all collections
    match /{path=**} {
      allow read, write: if request.auth != null;
    }

    // Allow public read for specific configuration collections
    match /site-config/{docId} {
      allow get: if true;
    }

    // Allow public read for form definitions
    match /form-definitions/{formId} {
      allow get: if true;
    }
    
    // Allow public read for published news
    match /news/{newsId} {
      allow get: if resource.data.published == true;
    }
    match /news/{newsId} {
      allow list: if true; // `list` is required for collection queries
    }

    // Allow public create for submissions
    match /afiliaciones/{submissionId} {
        allow create: if true;
    }
    
    match /fiscalizaciones/{submissionId} {
        allow create: if true;
    }

    match /contactSubmissions/{submissionId} {
        allow create: if true;
    }
  }
}
