rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for all collections, as the site is public.
    match /news/{document=**} {
      allow read: if true;
    }
     match /site-config/{document=**} {
      allow read: if true;
    }

    // Allow write only for authenticated users (admins)
    // This rule allows creating the document if it doesn't exist (for seeding)
    // but requires authentication for any subsequent updates or deletes.
    match /news/{newsId} {
      allow create: if true; // Allow initial creation for seeding
      allow update, delete: if request.auth != null;
    }
    
    match /site-config/{configId} {
        allow create: if true; // Allow initial creation for seeding
        allow update, delete: if request.auth != null;
    }
  }
}
