
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read on all collections for site visitors
    match /{document=**} {
      allow read: if true;
    }
    
    // --- Form Submissions ---
    // Allow anyone to submit (create) data for these forms.
    // Restrict updates and deletes to authenticated users.
    match /afiliaciones/{docId} {
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    match /fiscalizaciones/{docId} {
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // --- Admin-managed content ---
    // Allow authenticated users (admins) to write to these collections.
    match /site-config/{docId} {
       allow write: if request.auth != null;
    }
    match /news/{docId} {
       allow write: if request.auth != null;
    }
  }
}
