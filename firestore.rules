
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default to locked down
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow public read for form definitions only
    match /form-definitions/{formId} {
      allow read: if true;
      allow write: if request.auth != null; // Only admins can write
    }
    
    // Allow anyone to create (submit) a form, but not read/update/delete
    match /afiliaciones/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Only admins
    }
    
    match /fiscalizaciones/{submissionId} {
       allow create: if true;
       allow read, update, delete: if request.auth != null; // Only admins
    }

    match /contactSubmissions/{submissionId} {
       allow create: if true;
       allow read, update, delete: if request.auth != null; // Only admins
    }

    // Admins can read/write everything else.
    // This rule is checked if no other more specific rule matches.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
