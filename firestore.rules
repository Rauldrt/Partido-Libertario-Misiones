
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to all site configuration and news content.
    match /site-config/{docId} {
      allow read: if true;
      // Allow writing (create/update) for the initial data seeding and admin actions.
      // In a more complex app, this would be restricted to authenticated admins.
      allow write: if true;
    }

    match /news/{newsId} {
      allow read: if true;
      // Allow writing (create/update) for the initial data seeding and admin actions.
      allow write: if true;
    }
    
    // Default deny for any other collection
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
